{
  "name": "discordkit",
  "description": "A REST API Client for Discord",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=18.x"
  },
  "packageManager": "yarn@3.6.3",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "lint": "eslint \"./src/**/*.{j,t}s?(x)\"",
    "format": "yarn lint --fix",
    "prepublishOnly": "yarn lint && yarn test",
    "prepack": "yarn build",
    "release": "release-it",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anatine/zod-mock": "^3.13.2",
    "@faker-js/faker": "^8.1.0",
    "@release-it/conventional-changelog": "^7.0.2",
    "@saeris/eslint-config": "^2.5.0",
    "@tanstack/react-query": "^4.35.3",
    "@testing-library/react": "^14.0.0",
    "@trpc/server": "^10.38.5",
    "@types/eslint": "^8.44.3",
    "@types/node": "18.18.1",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.50.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-vitest": "^0.3.1",
    "jsdom": "^22.1.0",
    "msw": "^1.3.2",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^16.2.1",
    "tsup": "^7.2.0",
    "turbo": "1.10.14",
    "type-fest": "^4.3.3",
    "typescript": "5.2.2",
    "vitest": "^0.34.6",
    "zod": "^3.22.2"
  },
  "eslintConfig": {
    "extends": [
      "@saeris/eslint-config/base",
      "@saeris/eslint-config/typescript",
      "@saeris/eslint-config/type-aware"
    ],
    "parserOptions": {
      "EXPERIMENTAL_useProjectService": true
    },
    "settings": {
      "import/resolver": {
        "typescript": {
          "project": [
            "./tsconfig.json",
            "packages/*/tsconfig.json"
          ]
        }
      }
    },
    "overrides": [
      {
        "files": "./packages/**/src/**",
        "excludedFiles": "*.spec.ts",
        "rules": {
          "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ignorePackages": true
            }
          ],
          "import/no-useless-path-segments": [
            "error",
            {
              "noUselessIndex": false
            }
          ]
        }
      },
      {
        "files": [
          "./scripts/*.ts",
          "**/*.spec.ts"
        ],
        "env": {
          "vitest/env": true
        },
        "plugins": [
          "vitest"
        ],
        "extends": [
          "plugin:vitest/recommended"
        ]
      }
    ],
    "ignorePatterns": [
      ".next/**/*",
      "*.js",
      "*.cjs",
      "*.mjs",
      "*.d.ts"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "treeshake": true,
    "sourcemap": true,
    "clean": true
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: Publish v${version}"
    },
    "github": {
      "releaseName": "v${version}",
      "release": true,
      "autoGenerate": true,
      "web": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            }
          ]
        }
      }
    }
  }
}
