{
  "name": "discordkit",
  "description": "A REST API Client for Discord",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=20.x"
  },
  "packageManager": "yarn@4.9.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "ci": "turbo run lint test build --no-daemon",
    "clean": "rimraf --glob packages/*/dist",
    "build:all": "turbo run build build:apps build:examples",
    "build:apps": "turbo run build:apps",
    "build:examples": "turbo run build:examples",
    "build:packages": "turbo run build",
    "lint": "turbo run lint",
    "format": "yarn lint --fix",
    "release": "turbo run build && tsx ./scripts/version.ts && changeset publish",
    "test": "vitest --fileParallelism",
    "typecheck": "tsc --noEmit",
    "version": "changeset version"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@faker-js/faker": "^9.8.0",
    "@saeris/eslint-config": "^3.1.2",
    "@tanstack/react-query": "^5.81.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@trpc/server": "^11.4.3",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.0",
    "happy-dom": "^18.0.1",
    "msw": "^2.10.2",
    "nodejs-snowflake": "^2.0.1",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "turbo": "2.5.4",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "valibot": "^1.1.0",
    "valimock": "^1.4.0",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
