{
  "name": "discordkit",
  "description": "A REST API Client for Discord",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=18.x"
  },
  "packageManager": "yarn@4.0.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "ci": "turbo run lint test build --no-daemon",
    "clean": "rimraf --glob packages/*/dist",
    "build:all": "turbo run build build:apps build:examples",
    "build:apps": "turbo run build:apps",
    "build:examples": "turbo run build:examples",
    "build:packages": "turbo run build",
    "lint": "eslint \"./{apps,examples,packages,scripts}/**/*.{j,t}s?(x)\" --cache",
    "format": "yarn lint --fix",
    "release": "turbo run build && tsx ./scripts/version.ts && changeset publish",
    "test": "vitest --single-thread",
    "version": "changeset version"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@faker-js/faker": "^8.3.1",
    "@saeris/eslint-config": "^2.5.0",
    "@tanstack/react-query": "^5.8.9",
    "@testing-library/react": "^14.1.2",
    "@trpc/server": "^10.44.1",
    "@types/eslint": "^8.44.7",
    "@types/node": "20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.54.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-vitest": "^0.3.10",
    "happy-dom": "^12.10.3",
    "msw": "^2.0.9",
    "nodejs-snowflake": "^2.0.1",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.0",
    "turbo": "1.10.16",
    "type-fest": "^4.8.2",
    "typescript": "5.3.2",
    "valibot": "^0.21.0",
    "valimock": "^0.1.1",
    "vitest": "^0.34.6"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@saeris/eslint-config/base",
      "@saeris/eslint-config/next",
      "@saeris/eslint-config/typescript",
      "@saeris/eslint-config/type-aware"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "settings": {
      "import/resolver": {
        "typescript": true,
        "node": true
      }
    },
    "overrides": [
      {
        "files": [
          "./scripts/*.ts",
          "./packages/**/src/**"
        ],
        "excludedFiles": "*.spec.ts",
        "rules": {
          "import/no-useless-path-segments": [
            "error",
            {
              "noUselessIndex": false
            }
          ]
        }
      },
      {
        "files": [
          "./scripts/*.ts",
          "**/*.spec.ts"
        ],
        "env": {
          "vitest/env": true
        },
        "plugins": [
          "vitest"
        ],
        "extends": [
          "plugin:vitest/recommended"
        ]
      }
    ],
    "ignorePatterns": [
      "node_modules",
      "**/.next/**/*",
      "**/.turbo/**/*",
      "**/dist/**/*",
      "*.js",
      "*.cjs",
      "*.mjs",
      "*.d.ts"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
