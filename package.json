{
  "name": "@discordkit/client",
  "description": "A REST API Client for Discord",
  "version": "0.0.1",
  "license": "MIT",
  "keywords": [
    "discord",
    "api",
    "client",
    "rest",
    "trpc",
    "react-query"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/discordkit.git"
  },
  "homepage": "https://github.com/saeris/discordkit#readme",
  "bugs": {
    "url": "https://github.com/saeris/discordkit/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=18.x"
  },
  "packageManager": "yarn@3.6.3",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "imports": {
    "#*": [
      "./src/*",
      "./src/*.ts",
      "./src/*.tsx",
      "./src/*.js",
      "./src/*.jsx",
      "./src/*/index.ts",
      "./src/*/index.tsx",
      "./src/*/index.js",
      "./src/*/index.jsx"
    ]
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint \"./src/**/*.{j,t}s?(x)\"",
    "format": "yarn lint --fix",
    "prepublishOnly": "yarn lint && yarn test",
    "prepack": "yarn build",
    "release": "release-it",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@anatine/zod-mock": "^3.13.2",
    "@faker-js/faker": "^8.1.0",
    "@release-it/conventional-changelog": "^7.0.2",
    "@saeris/eslint-config": "^2.5.0",
    "@swc/core": "1.3.82",
    "@swc/jest": "^0.2.29",
    "@tanstack/react-query": "^4.35.3",
    "@testing-library/react": "^14.0.0",
    "@trpc/server": "^10.38.5",
    "@types/eslint": "^8.44.3",
    "@types/jest": "^29.5.5",
    "@types/node": "18.18.0",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "cross-fetch": "^4.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^1.3.1",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^16.2.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "type-fest": "^4.3.2",
    "typescript": "5.2.2",
    "zod": "^3.22.2"
  },
  "eslintConfig": {
    "extends": [
      "@saeris/eslint-config/base",
      "@saeris/eslint-config/jest",
      "@saeris/eslint-config/typescript",
      "@saeris/eslint-config/type-aware"
    ],
    "overrides": [
      {
        "files": "./src/**",
        "excludedFiles": "*.spec.ts",
        "rules": {
          "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ignorePackages": true
            }
          ],
          "import/no-useless-path-segments": [
            "error",
            {
              "noUselessIndex": false
            }
          ]
        }
      }
    ],
    "ignorePatterns": [
      ".next/**/*",
      "*.js",
      "*.cjs",
      "*.mjs",
      "*.d.ts"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "wallaby": {
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: Publish v${version}"
    },
    "github": {
      "releaseName": "v${version}",
      "release": true,
      "autoGenerate": true,
      "web": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            }
          ]
        }
      }
    }
  }
}
