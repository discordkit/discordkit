{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "./src/**/__fixtures__/**/*",
    "./src/**/__mocks__/**/*",
    "./src/**/__test__/**/*",
    "./src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true
  }
}
