{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "**/__test__/**/*",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "#*": ["./src/*"],
      "test-utils": ["../../scripts/test-utils.ts"]
    }
  }
}
