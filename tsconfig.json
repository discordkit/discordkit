{
  "ts-node": {
    "esm": true,
    "swc": true
  },
  "include": [
    "./examples/**/*.*",
    "./packages/**/*.ts",
    "./packages/**/*.d.ts",
    "./scripts/*.ts",
    "./*.ts"
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "packages/client/tsconfig.build.json" },
    { "path": "packages/core/tsconfig.build.json" }
  ],
  "compilerOptions": {
    "noEmit": true,
    "isolatedModules": true,
    // Always include these settings
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    /* Basic Options */
    "target": "ESNext",
    "module": "NodeNext",
    "lib": [
      "ESNext", // adds support for ESNext functionality
      "DOM" // adds support for 'window' other dom methods
    ],
    "types": ["vitest/globals"],
    "allowJs": true,
    /* JSX support */
    "jsx": "preserve",
    "declaration": true,
    /* Strict Type-Checking Options */
    "strict": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // "strictFunctionTypes": true,
    /* Module Resolution Options */
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "test-utils": ["./scripts/test-utils.ts"]
    },
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noErrorTruncation": true
  }
}
