{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["tsconfig.json", "vitest.config.ts"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "build:cjs": {
      "dependsOn": ["^build:cjs"]
    },
    "build:examples": {
      "dependsOn": ["^build"]
    },
    "//#lint": {
      "dependsOn": ["@discordkit/core#build"],
      "inputs": [
        "./apps/*/src/**",
        "./examples/*/src/**",
        "./pacakges/*/src/**"
      ]
    },
    "//#test": {
      "dependsOn": ["@discordkit/core#build"],
      "inputs": ["./pacakges/*/src/**"],
      "outputs": [".coverage/**"]
    },
    "dev": {}
  }
}
